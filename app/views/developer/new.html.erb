<div class="authform_large">
 <%= form_for(@developer, url: developer_index_path,  :method => "post",:html => { :role => 'form', :multipart => true}) do |f| %>
  <div class="col-md-12">
  	<%= devise_error_messages! %>
    <% if @developer.errors.any? %>
    <div id="error_explanation">
    <ul>
    <% @developer.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
    </div>
    <% end %>
    <h3>Create a New Developer</h3>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_area :address, :rows => 3,  class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :home_number %>
        <%= f.text_field :home_number, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :cel_number %>
        <%= f.text_field :cel_number, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :skype %>
        <%= f.text_field :skype, class: 'form-control' %>
      </div>
      <div class="form-group">
          <%= f.label :Country %> </br>
          <%= f.collection_select(:country_id, Country.all, :id, :name, {:prompt=>true},{ class: 'form-control'}) %>
      </div> 
      <div class="form-group">
          <%= f.label :Document_Type %> </br>
          <%= f.collection_select(:document_type_id, DocumentType.all, :id, :name, {:prompt=>true},{ class: 'form-control'}) %>
      </div> 
      <div class="form-group">
        <%= f.label :Identification_Number %>
        <%= f.text_field :id_number, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :Birth_Day %>
        <%= f.date_field :birth_day, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :Developer_Image %>
        <%= f.file_field :image, class: 'form-control' %>
      </div>   
    </div>
    <div class="col-md-12">
      <%= f.submit 'Create Developer', :class => 'btn btn-primary btn-lg btn-block' %>
    </div>
  </div>
  <% end %>
</div>
